    package="com.example.lalacindyy.foodlab">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>

        <activity android:name=".FavoritesActivity"
            android:label="Settings"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"/>


        <activity android:name=".RecipeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RecipeManager"
            android:screenOrientation="portrait"/>

        <activity android:name=".setting"
            android:screenOrientation="portrait"
            android:label="Notifications"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>

        <activity android:name=".signIn"
            android:screenOrientation="portrait"
            android:label="Notifications"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>

        <activity android:name=".setting_signIn"
            android:screenOrientation="portrait"
            android:label="set"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>

        <activity android:name=".RecipeListActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="spoonacular-recipe-food-nutrition-v1.p.mashape.com"
            android:value="xKJOaJ8LQKmshRRuz5kIywdflh0Ap1Mdb25jsn2vKhLkDctKoq"/>

